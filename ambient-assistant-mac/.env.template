# Ambient Assistant Environment Configuration
# ----------------------------------------
# Copy this file to .env and fill in your values

# Application Settings
# --------------------
# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# LLM Provider API Keys
# --------------------
# OpenAI API Key - Required for using OpenAI models (GPT-4, GPT-3.5)
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=

# Anthropic API Key - Required for using Claude models
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# DeepSeek API Key - Required for using DeepSeek models
# Get your API key from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=

# LLM Configuration
# ----------------
# Default LLM provider (openai, anthropic, deepseek)
DEFAULT_LLM_PROVIDER=openai

# Default model for each provider
OPENAI_DEFAULT_MODEL=gpt-4o
ANTHROPIC_DEFAULT_MODEL=claude-3-haiku
DEEPSEEK_DEFAULT_MODEL=deepseek-chat

# Memory and Embedding Settings
# ----------------------------
# Maximum number of conversation items to store (default: 1000)
MAX_MEMORY_ITEMS=1000

# Embedding model for semantic search (default: all-MiniLM-L6-v2)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# OCR Settings
# -----------
# Preferred OCR engine (vision, tesseract)
PREFERRED_OCR_ENGINE=vision

# Tesseract OCR path (if using Tesseract)
TESSERACT_PATH=/usr/local/bin/tesseract

# OCR language (default: eng)
OCR_LANGUAGE=eng

# Proxy Settings (if needed)
# -------------------------
# HTTP proxy
HTTP_PROXY=

# HTTPS proxy
HTTPS_PROXY=

# Database Settings
# ----------------
# SQLite database path
DATABASE_PATH=$HOME/Library/Application Support/AmbientAssistant/db/ambient.sqlite3

# Django secret key (generate your own secure key for production)
DJANGO_SECRET_KEY=change-me-to-a-secure-random-key

# UI Settings
# ----------
# UI theme (light, dark, system)
UI_THEME=system

# UI scale factor (0.8-1.5)
UI_SCALE=1.0

# Response window opacity (0.7-1.0)
RESPONSE_WINDOW_OPACITY=0.9

# Application Settings
# ------------------
# Start at login (true/false)
START_AT_LOGIN=false

# Hotkey to activate (format: modifier+key, e.g., alt+space)
ACTIVATION_HOTKEY=alt+space

# Privacy Settings
# --------------
# Allow telemetry (true/false)
ALLOW_TELEMETRY=false

# Allow screen capture (true/false)
ALLOW_SCREEN_CAPTURE=true

# Auto-detect questions (true/false)
AUTO_DETECT_QUESTIONS=false 